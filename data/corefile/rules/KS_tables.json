{
  "meta": {
    "version": "1.0",
    "standard": "KS C 4510:2021 + KS C IEC 61439-1:2021",
    "signed_by": "CEO",
    "signed_at": "PENDING",
    "description": "Korean standards compliance tables for electrical switchgear"
  },
  "tables": {
    "labels_marking": {
      "description": "Required labels and marking per KS C 4510",
      "mandatory_labels": {
        "nameplate": {
          "required_info": [
            "manufacturer_name",
            "model_designation", 
            "serial_number",
            "year_of_manufacture",
            "rated_voltage",
            "rated_current",
            "rated_frequency",
            "ip_degree",
            "short_circuit_rating"
          ],
          "material": "durable_engraved_or_printed",
          "location": "visible_accessible"
        },
        "warning_labels": {
          "electrical_hazard": {
            "text_ko": "위험! 고전압",
            "text_en": "DANGER! HIGH VOLTAGE",
            "symbol": "IEC_60417_5036",
            "color": "red_on_yellow"
          },
          "arc_flash": {
            "text_ko": "경고! 아크 플래시 위험",
            "text_en": "WARNING! ARC FLASH HAZARD", 
            "required_when": "above_240V"
          }
        }
      }
    },
    "wiring_color_code": {
      "description": "Wire color coding per KS C IEC 60446",
      "ac_circuits": {
        "single_phase": {
          "line": "brown_or_black",
          "neutral": "blue",
          "protective_earth": "green_yellow"
        },
        "three_phase": {
          "L1": "brown",
          "L2": "black", 
          "L3": "gray",
          "neutral": "blue",
          "protective_earth": "green_yellow"
        }
      },
      "dc_circuits": {
        "positive": "brown_or_red",
        "negative": "blue_or_black",
        "protective_earth": "green_yellow"
      }
    },
    "enclosure_requirements": {
      "description": "Enclosure requirements per KS C 4510",
      "material_requirements": {
        "metallic_enclosures": {
          "min_thickness_mm": {
            "steel_sheet": 1.5,
            "aluminum_sheet": 2.0,
            "stainless_steel": 1.2
          },
          "surface_treatment": "corrosion_resistant"
        },
        "non_metallic_enclosures": {
          "flame_rating": "V0_or_better",
          "uv_resistance": "required_for_outdoor",
          "impact_resistance": "IK08_minimum"
        }
      }
    },
    "installation_requirements": {
      "description": "Installation requirements per KS C 4510",
      "mounting": {
        "wall_mount": {
          "min_clearance_top_mm": 200,
          "min_clearance_bottom_mm": 100,
          "min_clearance_sides_mm": 150
        },
        "floor_mount": {
          "min_clearance_front_mm": 800,
          "min_clearance_rear_mm": 600,
          "min_clearance_sides_mm": 200
        }
      },
      "ventilation": {
        "natural_ventilation": {
          "inlet_area_factor": 1.0,
          "outlet_area_factor": 1.3
        },
        "forced_ventilation": {
          "air_change_rate_min": 10
        }
      }
    }
  }
}